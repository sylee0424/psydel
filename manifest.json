{
	"manifest_version": 2,

	"name": "all_in_one",
	"description": "all functions in one extension",
	"version": "1.0",

	"web_accessible_resources": [
		"*"
	],
	
	"applications": {
		"gecko": {
			"id": "scriptimport@psydel.org"
		}
	},
	
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"match_about_blank": true,
		"run_at":"document_end",
		"js": ["content.js"],
		"css": ["content.css"]
	}],
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"permissions": [
		"<all_urls>",
		"storage",
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"notifications",
		"browsingData",
		"tabs"
	]
}
